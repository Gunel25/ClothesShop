@model Color
<div class="container mt-5 d-flex justify-content-center">
    <div class="col-lg-6">
        <form action="/Color/Add" method="post" enctype="multipart/form-data">
            <div class="card" style="border-color:#F76808;">
                <div class="card-header d-flex justify-content-center align-items-center rounded-top py-3" >
                    <h3 class="mb-0">Color Form</h3>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label for="Name" class="form-control-label">Name</label>
                        <input type="text" id="Name" name="Name" placeholder="Name" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="Code" class="form-control-label">Code</label><br />
                        <input type="color" id="Code" name="Code" value="#FF6600" class="form-control" style="height:150px; ">
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" checked>
                        <label class="form-check-label" for="IsActive">Activation</label>
                    </div>
                    <button type="submit" class="btn btn-lg btn-info w-100">
                        <span id="payment-button-amount">Add</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>