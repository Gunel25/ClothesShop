@model Color
<div class="container mt-5 d-flex justify-content-center">
    <div class="col-lg-6">
            <form asp-controller="Color" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="card border-primary" style="border-color:#F76808;">
                <div class="card-header d-flex justify-content-center align-items-center rounded-top py-3">
                        <h5 class="mb-0">Color Edit Form</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-control-label">Name</label>
                            <input asp-for="Name" type="text" placeholder="Enter name" class="form-control" required>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Code" class="form-control-label">Code</label><br />
                        <input type="color" id="Code" name="Code" value="#FF6600" class="form-control" style="height:150px; ">
                    </div>
                        <div class="form-group form-check mt-3">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActive" checked>
                            <label class="form-check-label" for="IsActive">Active</label>
                        </div>
                    <button type="submit" class="btn btn-lg btn-info w-100">
                        <span id="payment-button-amount">Add</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
</div>